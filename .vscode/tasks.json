{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ESLint: Lint All Files",
      "type": "shell",
      "command": "npx",
      "args": ["eslint", ".", "--ext", ".js,.jsx,.ts,.tsx"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": "$eslint-stylish"
    },
    {
      "label": "ESLint: Fix All Files",
      "type": "shell",
      "command": "npx",
      "args": ["eslint", ".", "--ext", ".js,.jsx,.ts,.tsx", "--fix"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": "$eslint-stylish"
    },
    {
      "label": "TypeScript: Check All Files",
      "type": "shell",
      "command": "npx",
      "args": ["tsc", "--noEmit"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": "$tsc"
    }
  ]
}